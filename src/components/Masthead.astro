---
interface Props {
  title: string;
  issueNumber: number;
  date: string;
  readingTime?: number;
}

const { title, issueNumber, date, readingTime } = Astro.props;

// 格式化日期
const formattedDate = new Date(date).toLocaleDateString('zh-CN', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<header class="masthead">
  <div class="masthead-top">
    <span class="issue-badge">第 {issueNumber} 期</span>
    <time class="date" datetime={date}>{formattedDate}</time>
    {readingTime && readingTime > 0 && (
      <span class="reading-time">· 约 {readingTime} 分钟阅读</span>
    )}
  </div>

  <h1 class="title">{title}</h1>

  <div class="masthead-line"></div>
</header>

<style>
  .masthead {
    padding-bottom: 1.5rem;
  }

  .masthead-top {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
    flex-wrap: wrap;
  }

  .issue-badge {
    display: inline-block;
    padding: 4px 12px;
    background: var(--accent);
    color: white;
    font-size: 0.85rem;
    font-weight: 500;
    border-radius: 2px;
  }

  .date {
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  .reading-time {
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  .title {
    font-family: 'Noto Serif SC', serif;
    font-size: 2rem;
    font-weight: 700;
    line-height: 1.3;
    margin: 0;
    color: var(--text);
  }

  .masthead-line {
    margin-top: 1.5rem;
    height: 3px;
    background: linear-gradient(
      to right,
      var(--accent) 0%,
      var(--accent) 30%,
      var(--border) 30%,
      var(--border) 100%
    );
  }

  @media (max-width: 768px) {
    .title {
      font-size: 1.5rem;
    }
  }
</style>
