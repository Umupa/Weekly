---
// 右侧边栏 - 包含 TOC 和日历，可折叠
import TableOfContents from './TableOfContents.astro';
import CyberCalendar from './CyberCalendar.astro';

interface Props {
  currentDate?: string;
}

const { currentDate } = Astro.props;
---

<!-- 独立的切换按钮，不随边栏移动 -->
<button class="aside-toggle collapsed" id="aside-toggle" aria-label="展开侧边栏" title="展开侧边栏">
  <span class="toggle-icon" id="toggle-icon">◀</span>
</button>

<aside class="aside-right collapsed" id="aside-right">
  <div class="aside-content">
    <section class="aside-section">
      <TableOfContents />
    </section>

    <section class="aside-section">
      <CyberCalendar currentDate={currentDate} />
    </section>
  </div>
</aside>

<script>
  function initAsideToggle() {
    const aside = document.getElementById('aside-right');
    const toggle = document.getElementById('aside-toggle');
    const icon = document.getElementById('toggle-icon');

    if (!aside || !toggle || !icon) return;

    // 从 localStorage 读取状态，默认隐藏
    const isCollapsed = localStorage.getItem('aside-collapsed') !== 'false';

    if (isCollapsed) {
      aside.classList.add('collapsed');
      toggle.classList.add('collapsed');
      icon.textContent = '◀';
    } else {
      aside.classList.remove('collapsed');
      toggle.classList.remove('collapsed');
      icon.textContent = '▶';
    }

    toggle.addEventListener('click', () => {
      const willCollapse = !aside.classList.contains('collapsed');

      if (willCollapse) {
        aside.classList.add('collapsed');
        toggle.classList.add('collapsed');
        icon.textContent = '◀';
      } else {
        aside.classList.remove('collapsed');
        toggle.classList.remove('collapsed');
        icon.textContent = '▶';
      }

      localStorage.setItem('aside-collapsed', String(willCollapse));
    });
  }

  document.addEventListener('DOMContentLoaded', initAsideToggle);
  document.addEventListener('astro:page-load', initAsideToggle);
</script>

<style>
  /* 独立的切换按钮 */
  .aside-toggle {
    position: fixed;
    right: var(--aside-width, 240px);
    top: 50%;
    transform: translateY(-50%);
    width: 24px;
    height: 48px;
    background: var(--bg);
    border: 1px solid var(--border);
    border-right: none;
    border-radius: 4px 0 0 4px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-secondary);
    font-size: 0.7rem;
    transition: right 0.25s ease, color 0.15s ease;
    z-index: 11;
  }

  .aside-toggle.collapsed {
    right: 0;
  }

  .aside-toggle:hover {
    color: var(--accent);
  }

  /* 右侧边栏 */
  .aside-right {
    position: fixed;
    top: 0;
    right: 0;
    width: var(--aside-width, 240px);
    height: 100vh;
    background: var(--bg);
    border-left: 1px solid var(--border);
    display: flex;
    flex-direction: column;
    transition: transform 0.25s ease;
    z-index: 10;
  }

  .aside-right.collapsed {
    transform: translateX(100%);
  }

  .aside-content {
    flex: 1;
    overflow-y: auto;
    padding: 24px 20px;
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .aside-section {
    flex-shrink: 0;
  }

  /* 响应式 - 窄屏隐藏 */
  @media (max-width: 1200px) {
    .aside-right,
    .aside-toggle {
      display: none;
    }
  }
</style>
