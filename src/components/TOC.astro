---
/**
 * TOC - 文章目录
 * 从文章标题自动生成，支持高亮当前阅读位置
 */

interface Props {
  headings: { depth: number; slug: string; text: string }[];
}

const { headings } = Astro.props;

// 只显示 h2 和 h3
const tocItems = headings.filter((h) => h.depth === 2 || h.depth === 3);
---

{tocItems.length > 0 && (
  <nav class="toc" aria-label="文章目录">
    <div class="toc-title">目录</div>
    <ul class="toc-list">
      {tocItems.map((heading) => (
        <li class:list={['toc-item', `toc-item-${heading.depth}`]}>
          <a href={`#${heading.slug}`} class="toc-link" data-slug={heading.slug}>
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}

<style>
  .toc {
    position: sticky;
    top: 24px;
    max-height: calc(100vh - 48px);
    overflow-y: auto;
    padding: 16px;
    font-size: 0.875rem;
  }

  .toc-title {
    font-weight: 600;
    color: var(--text);
    margin-bottom: 12px;
    font-family: 'Noto Serif SC', serif;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-item {
    margin-bottom: 8px;
  }

  .toc-item-3 {
    padding-left: 12px;
  }

  .toc-link {
    display: block;
    color: var(--text-secondary);
    text-decoration: none;
    padding: 4px 8px;
    border-left: 2px solid transparent;
    transition: all 0.15s ease;
    line-height: 1.4;
  }

  .toc-link:hover {
    color: var(--text);
  }

  .toc-link.active {
    color: var(--accent);
    border-left-color: var(--accent);
    background: rgba(196, 30, 58, 0.05);
  }

  /* 隐藏滚动条但保持功能 */
  .toc::-webkit-scrollbar {
    width: 4px;
  }

  .toc::-webkit-scrollbar-thumb {
    background: var(--border);
    border-radius: 2px;
  }
</style>

<script>
  function initTOC() {
    const tocLinks = document.querySelectorAll('.toc-link');
    if (tocLinks.length === 0) return;

    const headings = Array.from(tocLinks).map((link) => {
      const slug = link.getAttribute('data-slug');
      const element = document.getElementById(slug || '');
      return { link, element };
    }).filter((item) => item.element);

    function updateActive() {
      const scrollTop = window.scrollY + 100; // 偏移量

      let activeIndex = 0;
      for (let i = 0; i < headings.length; i++) {
        if (headings[i].element && headings[i].element!.offsetTop <= scrollTop) {
          activeIndex = i;
        }
      }

      tocLinks.forEach((link, index) => {
        link.classList.toggle('active', index === activeIndex);
      });
    }

    window.addEventListener('scroll', updateActive, { passive: true });
    updateActive();

    // 平滑滚动
    tocLinks.forEach((link) => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const slug = link.getAttribute('data-slug');
        const target = document.getElementById(slug || '');
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
          history.pushState(null, '', `#${slug}`);
        }
      });
    });
  }

  initTOC();
</script>
