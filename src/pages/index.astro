---
import BaseLayout from '@layouts/BaseLayout.astro';
import Sidebar from '@components/Sidebar.astro';
import { getAllPosts, getIssueNumber } from '@/lib/posts';

const posts = await getAllPosts();
const latestPost = posts[0];
const latestIssueNumber = getIssueNumber(latestPost.id);
---

<BaseLayout title="赛博周刊 - 记录每周值得分享的内容">
  <div class="layout">
    <!-- 侧边栏 -->
    <aside class="sidebar">
      <Sidebar currentIssue={latestIssueNumber} />
    </aside>

    <!-- 主内容区 -->
    <main class="main">
      <div class="hero">
        <p class="hero-label">最新一期</p>
        <h1 class="hero-title">第 {latestIssueNumber} 期 - {latestPost.data.title}</h1>
        <p class="hero-desc">{latestPost.data.description}</p>
        <a href={`/posts/${latestIssueNumber}`} class="hero-btn">
          开始阅读 →
        </a>
      </div>
    </main>
  </div>
</BaseLayout>

<style>
  .layout {
    display: flex;
    min-height: 100vh;
  }

  .sidebar {
    position: fixed;
    top: 0;
    left: 0;
    width: var(--sidebar-width);
    height: 100vh;
    overflow-y: auto;
    border-right: 1px solid var(--border);
    background: var(--bg);
    z-index: 10;
  }

  .main {
    flex: 1;
    margin-left: var(--sidebar-width);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-page);
  }

  .hero {
    text-align: center;
    max-width: 600px;
  }

  .hero-label {
    font-size: 0.9rem;
    color: var(--accent);
    margin-bottom: 12px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .hero-title {
    font-family: 'Noto Serif SC', serif;
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 16px;
  }

  .hero-desc {
    color: var(--text-secondary);
    font-size: 1.1rem;
    margin-bottom: 32px;
  }

  .hero-btn {
    display: inline-block;
    padding: 12px 32px;
    background: var(--accent);
    color: white;
    text-decoration: none;
    font-weight: 500;
    border-radius: 4px;
    transition: opacity 0.15s ease;
  }

  .hero-btn:hover {
    opacity: 0.9;
  }

  /* 移动端适配 */
  @media (max-width: 768px) {
    .sidebar {
      display: none;
    }

    .main {
      margin-left: 0;
      padding: 16px;
    }

    .hero-title {
      font-size: 1.75rem;
    }
  }
</style>
