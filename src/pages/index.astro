---
import BaseLayout from '@layouts/BaseLayout.astro';
import PostCard from '@components/PostCard.astro';
import ArticleTools from '@components/ArticleTools.astro';
import { getAllPosts, getIssueNumber } from '@/lib/posts';

const posts = await getAllPosts();
---

<BaseLayout title="Slime周刊 - 缓慢但从未停止">
  <header class="header">
    <nav class="nav-wrapper">
      <div class="logo">
        <a href="/">
          <img src="/icon.svg" alt="Slime" class="logo-icon" />
          <h1 class="logo-text">Slime周刊</h1>
          <span class="logo-divider">·</span>
          <span class="logo-slogan">一只史莱姆的生活记录，缓慢但从未停止</span>
        </a>
        <ArticleTools />
      </div>
      <div class="nav-right">
        <a href="https://umupa.fun" class="nav-link" target="_blank" rel="noopener">博客</a>
        <a href="/posts/1" class="nav-link">关于</a>
        <a href="https://github.com/Umupa" class="nav-link" target="_blank" rel="noopener">GitHub</a>
      </div>
    </nav>
  </header>

  <main class="main-content">
    <div class="card-grid">
      {posts.map((post) => {
        const issueNumber = getIssueNumber(post.id);
        return (
          <PostCard
            issue={issueNumber}
            title={post.data.title}
            date={post.data.date}
            description={post.data.description}
            image={post.data.image}
          />
        );
      })}
    </div>
  </main>
</BaseLayout>

<style is:global>
  /* Header */
  .header {
    width: 100%;
    background-color: var(--bg);
    display: flex;
    align-items: center;
    justify-content: center;
    height: 96px;
  }

  .nav-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    max-width: 1338px;
    padding: 0 16px;
    margin: 10px 0 5px;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .logo a {
    display: flex;
    align-items: center;
    gap: 4px;
    text-decoration: none;
    font-size: 2rem;
    font-weight: 600;
    line-height: 1;
    color: var(--text);
    transition: all 200ms ease;
    padding: 8px 4px;
    margin: -8px -4px;
  }

  .logo a:hover {
    color: var(--accent);
  }

  .logo-icon {
    width: 52px;
    height: auto;
  }

  .logo-text {
    font: inherit;
    margin: 0;
    margin-left: -2px;
  }

  .logo-divider {
    font-size: 1.2rem;
    color: var(--text-secondary);
    margin: 0 4px;
    opacity: 0.5;
  }

  .logo-slogan {
    font-size: 0.9rem;
    font-weight: 400;
    color: var(--text-secondary);
    font-family: 'LXGW WenKai', serif;
    letter-spacing: 0.05em;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .nav-link {
    display: inline-flex;
    align-items: center;
    height: 36px;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 18px;
    font-weight: 600;
    transition: all 200ms ease;
  }

  .nav-link:hover {
    color: var(--text);
    text-decoration: underline;
  }

  /* Main Content */
  .main-content {
    width: 100%;
    max-width: 1338px;
    margin: -20px auto 48px;
    padding: 0 16px;
    box-sizing: border-box;
  }

  /* Card Grid - 4 columns by default */
  .card-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0 16px;
    margin-right: -20px;
  }

  /* 3 columns for large screens */
  @media (max-width: 1412px) {
    .nav-wrapper,
    .main-content {
      max-width: 998px;
    }
    .card-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* 2 columns for tablets */
  @media (max-width: 1080px) {
    .nav-wrapper,
    .main-content {
      max-width: 659px;
    }
    .card-grid {
      grid-template-columns: repeat(2, 1fr);
      margin-right: -20px;
    }
  }

  /* 1 column for mobile */
  @media (max-width: 768px) {
    .header {
      height: auto;
    }

    .nav-wrapper {
      margin: 5px 0;
      padding: 0 12px 0 14px;
    }

    .main-content {
      max-width: 100%;
      padding: 0 12px;
      margin-top: 0;
    }

    .card-grid {
      grid-template-columns: 1fr;
      max-width: 384px;
      margin: 0 auto;
    }
  }
</style>
