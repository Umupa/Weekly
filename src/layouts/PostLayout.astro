---
interface Props {
  title: string;
  issueNumber: number;
  date: string;
  description?: string;
  image?: string;
  prevPost?: { number: number; title: string } | null;
  nextPost?: { number: number; title: string } | null;
}

import BaseLayout from './BaseLayout.astro';
import Sidebar from '@components/Sidebar.astro';
import Masthead from '@components/Masthead.astro';
import ReadingProgress from '@components/ReadingProgress.astro';
import KeyboardNav from '@components/KeyboardNav.astro';
import ImageZoom from '@components/ImageZoom.astro';
import AsideRight from '@components/AsideRight.astro';

const {
  title,
  issueNumber,
  date,
  description,
  image,
  prevPost,
  nextPost,
} = Astro.props;

const pageTitle = `第 ${issueNumber} 期 - ${title} | 赛博周刊`;
const prevUrl = prevPost ? `/posts/${prevPost.number}` : undefined;
const nextUrl = nextPost ? `/posts/${nextPost.number}` : undefined;
---

<BaseLayout title={pageTitle} description={description} image={image}>
  <ReadingProgress />
  <KeyboardNav prevUrl={prevUrl} nextUrl={nextUrl} />
  <ImageZoom />

  <div class="layout">
    <!-- 左侧边栏 -->
    <aside class="sidebar">
      <Sidebar currentIssue={issueNumber} />
    </aside>

    <!-- 主内容区 -->
    <main class="main">
      <div class="main-inner">
        <Masthead title={title} issueNumber={issueNumber} date={date} />

        <article class="content prose">
          <slot />
        </article>

        <!-- 上下篇导航 -->
        {(prevPost || nextPost) && (
          <nav class="post-nav">
            <div class="post-nav-inner">
              {prevPost ? (
                <a href={`/posts/${prevPost.number}`} class="post-nav-link prev">
                  <span class="post-nav-arrow">←</span>
                  <div class="post-nav-content">
                    <span class="post-nav-label">上一期</span>
                    <span class="post-nav-title">{prevPost.title}</span>
                  </div>
                </a>
              ) : <div class="post-nav-placeholder" />}

              {nextPost ? (
                <a href={`/posts/${nextPost.number}`} class="post-nav-link next">
                  <div class="post-nav-content">
                    <span class="post-nav-label">下一期</span>
                    <span class="post-nav-title">{nextPost.title}</span>
                  </div>
                  <span class="post-nav-arrow">→</span>
                </a>
              ) : <div class="post-nav-placeholder" />}
            </div>
          </nav>
        )}
      </div>
    </main>

    <!-- 右侧边栏 -->
    <AsideRight currentDate={date} />
  </div>
</BaseLayout>

<style>
  .layout {
    min-height: 100vh;
  }

  .sidebar {
    position: fixed;
    top: 0;
    left: 0;
    width: var(--sidebar-width);
    height: 100vh;
    overflow-y: auto;
    border-right: 1px solid var(--border);
    background: var(--bg);
    z-index: 10;
  }

  .main {
    margin-left: var(--sidebar-width);
    margin-right: var(--aside-width);
    padding: var(--spacing-page);
    padding-left: clamp(32px, 4vw, 56px);
    padding-right: clamp(32px, 4vw, 56px);
  }

  .main-inner {
    width: 100%;
    max-width: var(--content-max-width);
  }

  .content {
    margin-top: 2rem;
  }

  /* 上下篇导航 - 报刊风格 */
  .post-nav {
    margin-top: 64px;
    padding-top: 24px;
    border-top: 2px solid var(--text);
  }

  .post-nav-inner {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
  }

  .post-nav-placeholder {
    flex: 1;
  }

  .post-nav-link {
    display: inline-flex;
    align-items: baseline;
    gap: 8px;
    text-decoration: none;
    color: var(--text);
    padding: 8px 0;
    transition: color 0.15s ease;
  }

  .post-nav-link:hover {
    color: var(--accent);
  }

  .post-nav-link:hover .post-nav-arrow {
    color: var(--accent);
  }

  .post-nav-link.next {
    text-align: right;
  }

  .post-nav-arrow {
    font-size: 0.9rem;
    color: var(--text-secondary);
    transition: color 0.15s ease;
  }

  .post-nav-content {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .post-nav-label {
    font-size: 0.8rem;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .post-nav-title {
    font-size: 0.95rem;
    font-weight: 500;
  }

  /* 响应式 */
  @media (max-width: 1200px) {
    .main {
      margin-right: 0;
    }
  }

  @media (max-width: 768px) {
    .sidebar {
      display: none;
    }

    .main {
      margin-left: 0;
      margin-right: 0;
      padding: 20px 16px;
    }

    .post-nav {
      margin-top: 48px;
      padding-top: 20px;
    }

    .post-nav-inner {
      flex-direction: column;
      gap: 16px;
      align-items: stretch;
    }

    .post-nav-link.next {
      text-align: left;
    }
  }
</style>
