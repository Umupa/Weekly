---
interface Props {
  title: string;
  issueNumber: number;
  date: string;
  description?: string;
  image?: string;
  prevPost?: { number: number; title: string } | null;
  nextPost?: { number: number; title: string } | null;
}

import BaseLayout from './BaseLayout.astro';
import Sidebar from '@components/Sidebar.astro';
import Masthead from '@components/Masthead.astro';
import ReadingProgress from '@components/ReadingProgress.astro';
import KeyboardNav from '@components/KeyboardNav.astro';
import ImageZoom from '@components/ImageZoom.astro';

const {
  title,
  issueNumber,
  date,
  description,
  image,
  prevPost,
  nextPost,
} = Astro.props;

const pageTitle = `第 ${issueNumber} 期 - ${title} | 赛博周刊`;
const prevUrl = prevPost ? `/posts/${prevPost.number}` : undefined;
const nextUrl = nextPost ? `/posts/${nextPost.number}` : undefined;
---

<BaseLayout title={pageTitle} description={description} image={image}>
  <ReadingProgress />
  <KeyboardNav prevUrl={prevUrl} nextUrl={nextUrl} />
  <ImageZoom />

  <div class="layout">
    <!-- 左侧边栏 -->
    <aside class="sidebar">
      <Sidebar currentIssue={issueNumber} />
    </aside>

    <!-- 主内容区 -->
    <main class="main">
      <div class="main-inner">
        <Masthead title={title} issueNumber={issueNumber} date={date} />

        <article class="content prose">
          <slot />
        </article>

        <!-- 上下篇导航 -->
        {(prevPost || nextPost) && (
          <nav class="post-nav">
            <div class="post-nav-inner">
              {prevPost ? (
                <a href={`/posts/${prevPost.number}`} class="post-nav-link prev">
                  <span class="post-nav-arrow">←</span>
                  <div class="post-nav-content">
                    <span class="post-nav-label">上一期</span>
                    <span class="post-nav-title">{prevPost.title}</span>
                  </div>
                </a>
              ) : <div class="post-nav-placeholder" />}

              {nextPost ? (
                <a href={`/posts/${nextPost.number}`} class="post-nav-link next">
                  <div class="post-nav-content">
                    <span class="post-nav-label">下一期</span>
                    <span class="post-nav-title">{nextPost.title}</span>
                  </div>
                  <span class="post-nav-arrow">→</span>
                </a>
              ) : <div class="post-nav-placeholder" />}
            </div>
          </nav>
        )}
      </div>
    </main>
  </div>
</BaseLayout>

<style>
  .layout {
    display: flex;
    min-height: 100vh;
  }

  .sidebar {
    position: fixed;
    top: 0;
    left: 0;
    width: var(--sidebar-width);
    height: 100vh;
    overflow-y: auto;
    border-right: 1px solid var(--border);
    background: var(--bg);
    z-index: 10;
  }

  .main {
    flex: 1;
    margin-left: var(--sidebar-width);
    display: flex;
    justify-content: center;
    padding: var(--spacing-page);
  }

  .main-inner {
    width: 100%;
    max-width: var(--content-max-width);
  }

  .content {
    margin-top: 2rem;
  }

  /* 上下篇导航 */
  .post-nav {
    margin-top: 64px;
    padding-top: 32px;
    border-top: 1px dashed var(--border);
  }

  .post-nav-inner {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24px;
  }

  .post-nav-placeholder {
    /* 占位，保持布局 */
  }

  .post-nav-link {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 20px 24px;
    text-decoration: none;
    background: var(--bg-secondary);
    border-radius: 12px;
    transition: all 0.2s ease;
  }

  .post-nav-link:hover {
    background: var(--bg);
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    transform: translateY(-2px);
  }

  .post-nav-link.next {
    justify-content: flex-end;
    text-align: right;
  }

  .post-nav-arrow {
    font-size: 1.5rem;
    color: var(--accent);
    font-weight: 300;
    flex-shrink: 0;
  }

  .post-nav-content {
    display: flex;
    flex-direction: column;
    gap: 4px;
    min-width: 0;
  }

  .post-nav-label {
    font-size: 0.8rem;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .post-nav-title {
    font-size: 1rem;
    color: var(--text);
    font-weight: 500;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  /* 响应式 */
  @media (max-width: 768px) {
    .sidebar {
      display: none;
    }

    .main {
      margin-left: 0;
      padding: 16px;
    }

    .post-nav {
      margin-top: 48px;
      padding-top: 24px;
    }

    .post-nav-inner {
      grid-template-columns: 1fr;
      gap: 12px;
    }

    .post-nav-link {
      padding: 16px 20px;
    }

    .post-nav-link.next {
      justify-content: flex-start;
      text-align: left;
      flex-direction: row-reverse;
    }
  }
</style>
